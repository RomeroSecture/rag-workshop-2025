# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-YOUR-API-KEY-HERE
OPENAI_ORG_ID=org-OPTIONAL-ORG-ID

# Alternative LLM Providers (OPTIONAL)
ANTHROPIC_API_KEY=sk-ant-YOUR-KEY-HERE
COHERE_API_KEY=YOUR-COHERE-KEY-HERE
HUGGINGFACE_TOKEN=hf_YOUR-TOKEN-HERE

# Vector Database Configuration (OPTIONAL)
PINECONE_API_KEY=YOUR-PINECONE-KEY
PINECONE_ENVIRONMENT=us-east-1-aws
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=YOUR-QDRANT-KEY

# Monitoring and Analytics (OPTIONAL)
WANDB_API_KEY=YOUR-WANDB-KEY
WANDB_PROJECT=rag-workshop-2025
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.langchain.plus
LANGCHAIN_API_KEY=YOUR-LANGSMITH-KEY
LANGCHAIN_PROJECT=rag-workshop

# Application Settings
LOG_LEVEL=INFO
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=2000
TEMPERATURE=0.7
TOP_K_RETRIEVAL=5
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-3.5-turbo

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_DIR=/workspace/data/cache

# Database Settings
CHROMA_PERSIST_DIRECTORY=/workspace/data/vectordb
COLLECTION_NAME=rag_workshop_2025

# API Settings
API_PORT=8000
STREAMLIT_PORT=8501
JUPYTER_PORT=8888

# Security (OPTIONAL)
API_SECRET_KEY=your-secret-key-for-production
ENABLE_AUTH=false

# Workshop Settings
WORKSHOP_MODE=true
DEBUG_MODE=true
MOCK_API_CALLS=false
USE_LOCAL_MODELS=false